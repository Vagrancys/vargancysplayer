<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/black">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/video_title"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/white"
                android:layout_marginStart="@dimen/margin_size_10dp"/>
            <ImageView
                android:id="@+id/iv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/battery_0"/>
            <TextView
                android:id="@+id/tv_system_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_time"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/margin_size_10dp"
                android:layout_marginStart="@dimen/margin_size_10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/black"
            android:padding="@dimen/margin_size_10dp">
            <Button
                android:id="@+id/btn_voice"
                android:layout_width="@dimen/margin_size_30dp"
                android:layout_height="@dimen/margin_size_20dp"
                android:background="@drawable/btn_voice_selector"
                android:layout_marginEnd="@dimen/margin_size_10dp"/>
            <SeekBar
                android:id="@+id/seek_voice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progress="20"
                android:thumb="@drawable/progress_thumb"
                android:minHeight="@dimen/margin_size_5dp"
                android:maxHeight="@dimen/margin_size_5dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/btn_switch"
                android:layout_width="@dimen/margin_size_30dp"
                android:layout_height="@dimen/margin_size_30dp"
                android:background="@drawable/btn_switch_selector"
                android:layout_marginStart="@dimen/margin_size_10dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/black"
            android:padding="@dimen/margin_size_10dp">
            <TextView
                android:id="@+id/tv_current_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_time"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/white"
                android:layout_marginEnd="@dimen/margin_size_10dp"/>
            <SeekBar
                android:id="@+id/seek_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:progress="20"
                android:thumb="@drawable/progress_thumb"
                android:minHeight="@dimen/margin_size_5dp"
                android:maxHeight="@dimen/margin_size_5dp"
                android:layout_weight="1"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/tv_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/video_time"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18sp"
                android:layout_marginStart="@dimen/margin_size_10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_size_60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/black"
            android:padding="@dimen/margin_size_10dp">
            <Button
                android:id="@+id/btn_exit"
                android:layout_width="@dimen/margin_size_30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_exit_selector" />
            <Button
                android:id="@+id/btn_video_pre"
                android:layout_width="@dimen/margin_size_50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_video_pre_selector"
                android:rotation="180"/>
            <Button
                android:id="@+id/btn_video_start_pause"
                android:layout_width="@dimen/margin_size_50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_video_pause_selector"/>
            <Button
                android:id="@+id/btn_video_next"
                android:layout_width="@dimen/margin_size_50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_video_pre_selector"/>
            <Button
                android:id="@+id/btn_video_switch_screen"
                android:layout_width="@dimen/margin_size_30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_video_switch_default_selector"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>